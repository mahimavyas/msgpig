<included>
	<property name="PROJECT_ID" value="MSGPIG-Notification"/>
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_DIR:-logs}/${PROJECT_ID}.json</File>
        
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
        	<customFields>{"application":"MSGPIG-Notification"}</customFields>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR:-logs}/${PROJECT_ID}.%d{yyyy-MM-dd}.%i.json</fileNamePattern>
            <maxHistory>1</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>
    <appender name="async" class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="file" />
	</appender>

	<logger name="org.dozer.config.GlobalSettings" level="info" />

	<logger name="org.jboss.logging" level="error" />
	<logger name="org.hibernate" level="error" />
	<logger name="org.springframework" level="error" />
	<logger name="org.dozer" level="warn" />
	<logger name="org.apache" level="warn" />


	<root level="INFO">
		<appender-ref ref="async" />
	</root>
</included>
